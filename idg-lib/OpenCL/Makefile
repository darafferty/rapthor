#
#   Parameters
#
NR_STATIONS=30
NR_TIME=1024
NR_CHANNELS=16
NR_POLARIZATIONS=4
GRIDSIZE=512
SUBGRIDSIZE=32
JOBSIZE=100
IMAGESIZE=0.1
W_PLANES=10
CHUNKSIZE=16

PARAMETERS=-DIMAGESIZE=${IMAGESIZE} -DW_PLANES=${W_PLANES} -DNR_STATIONS=${NR_STATIONS} -DNR_TIME=${NR_TIME} -DNR_CHANNELS=${NR_CHANNELS} -DNR_POLARIZATIONS=${NR_POLARIZATIONS} -DGRIDSIZE=${GRIDSIZE} -DSUBGRIDSIZE=${SUBGRIDSIZE} -DJOBSIZE=${JOBSIZE} -DCHUNKSIZE=${CHUNKSIZE}

#
#   Dependencies
#
OPENCL_INC=/opt/AMDAPP/include

#
#   Rules	
#
IDG-OPENCL: IDG.cpp ../Data/Init.cpp ../Lib/uvwsim.c
	g++ -o $@ $^ -lOpenCL -fopenmp -I../Common -I../Data -I../Lib -I${OPENCL_INC} ${PARAMETERS}

EXEC=IDG-OPENCL
clean:
	@rm -f ${EXEC} *.so */*~ *~ 
